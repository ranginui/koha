            <td><a href="javascript:Import(<!-- TMPL_VAR NAME="breedingid" -->,<!-- TMPL_VAR NAME="biblionumber" -->)">Import</a></td> 
        </tr>
        <!-- /TMPL_IF -->
    <!-- /TMPL_LOOP --></tbody>
</table>
