	 $(document).ready(function() {
	 	$("th a").hide();
	 	$(".ratiolimit").click(function () {
            $("#ratio").val($(this).html());
        });
	 	$(".ratiolimit").hover(
            function () { $(this).toggleClass("ulined") },
            function () { $(this).toggleClass("ulined") }
        );
		$.tablesorter.defaults.widgets = ['zebra']; 
		$("#holdst:has(tbody tr)").tablesorter({    // only add sort if the table has a body and rows
