       9: { sorter: false},
      10: { sorter: false}
    }
  }).tablesorterPager({
    container:     $("#pagertable_reports"),
    positionFixed: false,
    size:          20
  });
});
//]]>
</script>
</head>
<body>
[% INCLUDE 'header.inc' %]
[% INCLUDE 'circ-search.inc' %]

<div id="breadcrumbs"><a href="/cgi-bin/koha/mainpage.pl">Home</a>
