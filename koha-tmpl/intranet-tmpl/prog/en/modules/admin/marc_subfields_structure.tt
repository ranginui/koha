    $('#subfieldtabs > ul').tabs();
        $("a.displaymore").click(function(){
        var link = $(this);
        var constraints = $("#"+$(this).attr("href").replace("#",""));
        constraints.toggle();
            if($(constraints).is(':visible')){
                link.html(_("Hide constraints"));
            } else {
                link.html(_("Display more constraints"));
            }
    });
});

