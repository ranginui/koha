	if (summaryStatus == '' && basketStatus == '' && orderStatus == '') { clearFilters(); return false; }

	var filtered = "table#pendingt tbody.filterclass tr";

	// We hide everything
	$("#nothingfoundrow").remove();
	$(filtered).hide();

